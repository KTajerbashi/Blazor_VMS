@page "/"

<PageTitle>داشبورد</PageTitle>

<div class="container-fluid p-5 text-center">
    <AuthorizeView>
        <NotAuthorized>
            <div class="text-center bg-dark bg-gradient text-light rounded-3 p-3">
                <ul class="list-group p-0 m-0 list-unstyled d-flex fleflex-row justify-content-evenly">
                    <li class="list-group-item nav-item px-3">
                        <NavLink class="nav-link text-dark" href="/Security/Login" Match="NavLinkMatch.All">
                            <span class="oi oi-account-login" aria-hidden="true"></span>
                            ورود
                        </NavLink>
                    </li>
                    <li class=" list-group-item  nav-item px-3">
                        <NavLink class="nav-link text-dark" href="/Security/SignUp" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-signal" aria-hidden="true"></span>
                            ثبت نام
                        </NavLink>
                    </li>
                </ul>
            </div>
            <div class="row my-3">
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6"><div class="h200 text-center bg-dark bg-gradient text-light rounded-3 p-3">1</div></div>
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6"><div class="h200 text-center bg-dark bg-gradient text-light rounded-3 p-3">1</div></div>
            </div>
            <div class="row my-3">
                <div class="col-12"><div class="text-center bg-dark bg-gradient h300 text-light rounded-3 p-3">1</div></div>
            </div>
        </NotAuthorized>
        <Authorized>
            <div class=" text-center bg-dark bg-gradient text-light rounded-3 p-3">
                <ul class="list-group p-0 m-0 list-unstyled d-flex fleflex-row justify-content-evenly">
                    <li class="list-group-item nav-item px-3">
                        <NavLink class="nav-link text-dark" href="/Security/Profile" Match="NavLinkMatch.All">
                            <span class="oi oi-dashboard" aria-hidden="true"></span>
                            حساب کاربری (@context.User.Identity.Name)
                        </NavLink>
                    </li>
                    <li class=" list-group-item  nav-item px-3">
                        <NavLink class="nav-link text-dark" href="/Security/Logout" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-account-logout" aria-hidden="true"></span>
                            خروج
                        </NavLink>
                    </li>
                </ul>
            </div>
            <div class="row my-3 d-flex justify-content-center">
                <div class="col-sm-12 col-md-4 col-lg-6 col-xl-3 my-2">
                    <div class="h100 text-center bg-dark bg-gradient text-light rounded-3 p-3">
                        1
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-6 col-xl-3 my-2">
                    <div class="h100 text-center bg-dark bg-gradient text-light rounded-3 p-3">
                        2
                    </div>
                </div>
                <div class=" col-sm-12 col-md-4 col-lg-6 col-xl-3 my-2">
                    <div class="h100 text-center bg-dark bg-gradient text-light rounded-3 p-3">
                        3
                    </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6"><div class="h200 text-center bg-dark bg-gradient text-light rounded-3 p-3">1</div></div>
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6"><div class="h200 text-center bg-dark bg-gradient text-light rounded-3 p-3">1</div></div>
            </div>
            <div class="row my-3">
                <div class="col-12"><div class="text-center bg-dark bg-gradient h300 text-light rounded-3 p-3">1</div></div>
            </div>
        </Authorized>

    </AuthorizeView>
    <SurveyPrompt Title="به داشبورد سیستم مدیریت محتوا خوش آمدید" />
</div>



