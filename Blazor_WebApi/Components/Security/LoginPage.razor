@functions{
    async Task FormSubmitted()
    {
        var result = await this.service.Login(Model);
        if (result.IsSuccess)
        {
            ReloadPage(NavigationManager);
            NavigationManager.NavigateTo("/Security/Profile");
        }
        else
        {
            Messages = result.Message;
        }
    }
