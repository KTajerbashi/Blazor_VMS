<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SSO.styles.css" asp-append-version="true" />
</head>
<body dir="rtl">
    <header>
        <nav style="background:linear-gradient(128deg, #38ffa5, #4643ff, #0056f1);" class="bg-danger navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index">سیستم یکپارچه SSO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">صفحه اصلی</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Main/Privacy">در باره ما</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Identity/SignUp">صفحه ثبت نام</a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/Admin/Login">صفحه ورود</a>
                        </li> *@

                        @*
                        <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Login" asp-action="Index">ورود یکپارچه</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-success" asp-area="" asp-controller="SignUp" asp-action="Index">ثبت نام</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Index">صفحه کاربری</a>
                        </li>
                        *@
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/Identity/ProfilePage" asp-route-id="@User.Identity.Name" class="nav-link text-light btn btn-dark px-4 mx-1 rounded-5 shadow">
                            @User.Identity.Name
                        </a>
                        <a class="nav-link text-light btn btn-primary px-4 rounded-5 shadow mx-1" asp-page="/Admin/AdminPanel">پنل مدیریت</a>

                    }
                    else
                    {
                        <a class="nav-link text-light btn btn-primary px-4 mx-1 rounded-5 shadow" asp-area="" asp-page="/Identity/Login">ورود</a>
                    }
                    <a class="nav-link text-light btn btn-danger px-4 rounded-5 shadow" asp-area="" asp-page="/Identity/Login" asp-page-handler="SignOut">خروج</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-light">
            اطلاعات محفوظ است
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>